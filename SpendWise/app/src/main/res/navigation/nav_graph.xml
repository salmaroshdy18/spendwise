<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <!-- DASHBOARD -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.spendwise.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <!-- TRANSACTIONS LIST -->
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.spendwise.ui.transactions.TransactionsListFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_transactions_list" />

    <!-- ADD TRANSACTION -->
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.example.spendwise.ui.transactions.AddTransactionFragment"
        android:label="Add Transaction"
        tools:layout="@layout/fragment_add_transaction" />

    <!-- CHATBOT -->
    <fragment
        android:id="@+id/chatbotFragment"
        android:name="com.example.spendwise.ui.chatbot.ChatbotFragment"
        android:label="Salma Bot"
        tools:layout="@layout/fragment_chatbot" />

    <fragment
        android:id="@+id/budgetsFragment"
        android:name="com.example.spendwise.ui.budgets.BudgetsFragment"
        android:label="Budgets"
        tools:layout="@layout/fragment_budgets" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.spendwise.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settingsFragment_to_manageCategoriesFragment"
            app:destination="@id/manageCategoriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/manageCategoriesFragment"
        android:name="com.example.spendwise.ui.settings.ManageCategoriesFragment"
        android:label="Manage Categories"
        tools:layout="@layout/fragment_manage_categories" />

</navigation>
