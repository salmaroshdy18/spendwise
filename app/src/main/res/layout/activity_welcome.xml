<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/spendwise_background"
    android:paddingHorizontal="32dp"
    android:paddingTop="48dp"
    android:paddingBottom="32dp">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appIcon"
        android:src="@drawable/applogo"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="28dp"/>


    <!-- App Title -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:text="Welcome to SpendWise"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/spendwise_primary"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/welcomeSubtitle"
        android:text="Track your money with ease."
        android:textSize="16sp"
        android:textColor="@color/spendwise_secondary"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Get Started Button -->
    <Button
        android:id="@+id/btnGetStarted"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/spendwise_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="36dp"/>

</LinearLayout>
